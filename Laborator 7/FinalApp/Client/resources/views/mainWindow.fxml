<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #e4ede9;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduleMaker.client.gui.ControllerMainWindow">
   <top>
      <HBox fx:id="barBox" alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="759.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="minusIcon" mnemonicParsing="false" style="-fx-background-color: #e4ede9;" textFill="#36a897">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/minus_111123.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="circleIcon" mnemonicParsing="false" style="-fx-background-color: #e4ede9;" textFill="#36a897">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/resize.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="closeIcon" mnemonicParsing="false" style="-fx-background-color: #e4ede9;" textFill="#36a897">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="13.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/close.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <padding>
            <Insets right="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="445.0" prefWidth="195.0" spacing="20.0" style="-fx-background-color: #36a897;" BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="128.0" prefWidth="198.0">
               <children>
                  <Label layoutX="4.0" layoutY="42.0" prefHeight="60.0" prefWidth="195.0" style="-fx-stroke: black; -fx-stroke-width: 1;" text="Schedule Maker " textFill="WHITE">
                     <font>
                        <Font name="Gabriola" size="37.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Button fx:id="employeeButton" alignment="TOP_LEFT" graphicTextGap="10.0" mnemonicParsing="false"  prefHeight="45.0" prefWidth="195.0" style="-fx-background-color: #8bc9b9;" text="Employees" textFill="WHITE" onAction="#handleEmployeeButton">
               <font>
                  <Font name="Dubai Regular" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
               </graphic>
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/group.png" />
                     </image>
                  </ImageView>
               </graphic>

            </Button>
            <Button fx:id="scheduleButton" alignment="TOP_LEFT" graphicTextGap="10.0" mnemonicParsing="false"  prefHeight="45.0" prefWidth="198.0" style="-fx-background-color: #8bc9b9;" text="Schedule" textFill="WHITE" onAction="#showScheduleStage">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="Dubai Regular" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/schedule.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button alignment="TOP_LEFT" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="195.0" style="-fx-background-color: #8bc9b9;" text="Messages" textFill="WHITE" onAction="#showMessageStage">
               <font>
                  <Font name="Dubai Regular" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/message.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="logoutButton" alignment="TOP_LEFT" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="195.0" style="-fx-background-color: #8bc9b9;" text="Logout" textFill="WHITE">
               <font>
                  <Font name="Dubai Regular" size="18.0" />
               </font>
               <graphic>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/logout.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
